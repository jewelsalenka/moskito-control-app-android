<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_item_height"
                android:id="@+id/server_item">
    <View
            android:id="@+id/line_color"
            android:layout_width="@dimen/component_state_color_size"
            android:layout_height="@dimen/component_state_color_size"
            android:layout_marginLeft="@dimen/component_state_color_marginLeft"
            android:layout_marginRight="@dimen/component_state_color_marginLeft"
            android:layout_centerVertical="true"/>
    <TextView
            android:id="@+id/line_name"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="SessionCount Cur Absolute@localhost"
            android:layout_toRightOf="@id/line_color"
            android:gravity="center_vertical"/>
    <View
            android:id="@+id/show_or_hide_line"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/tick"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
</RelativeLayout>