<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_item_height">
    <View
            android:id="@+id/app_color"
            android:layout_width="@dimen/app_color_size"
            android:layout_height="@dimen/app_color_size"
            android:background="@android:drawable/btn_star"
            android:layout_marginLeft="@dimen/component_state_color_marginLeft"
            android:layout_marginRight="@dimen/component_state_color_marginLeft"
            android:layout_centerVertical="true"/>
    <TextView
            android:id="@+id/app_name"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="FirstApp"
            android:layout_toRightOf="@id/app_color"
            android:gravity="center_vertical"/>
    <View
            android:id="@+id/go_to_app"
            android:layout_width="@dimen/btn_go_to_app_width"
            android:layout_height="@dimen/btn_go_to_app_height"
            android:background="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"/>

</RelativeLayout>