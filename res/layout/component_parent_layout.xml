<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_item_height"
                android:id="@+id/server_item">
    <View
            android:id="@+id/component_parent_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/main_list_devider"/>
    <View
            android:id="@+id/server_color_state"
            android:layout_width="@dimen/component_state_color_size"
            android:layout_height="@dimen/component_state_color_size"
            android:layout_marginLeft="@dimen/component_state_color_marginLeft"
            android:layout_marginRight="@dimen/component_state_color_marginLeft"
            android:layout_centerVertical="true"/>
    <TextView
            android:id="@+id/server_name"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="localhost"
            android:layout_toRightOf="@id/server_color_state"
            android:gravity="center_vertical"/>
    <View
            android:id="@+id/show_hide_info"
            android:layout_width="@dimen/component_show_hide_info_width"
            android:layout_height="@dimen/component_show_hide_info_height"
            android:layout_marginRight="12dp"
            android:background="@drawable/arrow_bottom"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
</RelativeLayout>
