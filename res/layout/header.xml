<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/header_height"
              android:id="@+id/header">
    <View
            android:id="@+id/settings"
            android:layout_height="@dimen/icon_size"
            android:layout_width="@dimen/icon_size"
            android:background="@android:drawable/ic_menu_manage"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/header_margin_left_right"/>
    <View
            android:id="@+id/info"
            android:layout_height="@dimen/icon_size"
            android:layout_width="@dimen/icon_size"
            android:background="@android:drawable/ic_menu_info_details"
            android:layout_toLeftOf="@id/settings"
            android:layout_centerVertical="true"/>

    <TextView
            android:id="@+id/application_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="App"
            android:textColor="@color/wight"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />
    <View
            android:id="@+id/show_applications"
            android:layout_height="@dimen/icon_size"
            android:layout_width="@dimen/icon_size"
            android:background="@android:drawable/ic_menu_sort_by_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/header_margin_left_right"/>



</RelativeLayout>